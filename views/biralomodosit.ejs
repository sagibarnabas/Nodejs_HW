<%-include('header') %>
<%-include('menu') %>
<h2>Bíráló <%if(typeof biralo==='undefined'){%>létrehozása<%}else{%>módosítása<%}%></h2>

<div class="container">
    <div class="row">
        <div class="col-lg-4 col-md-6 col-12">
            <form method="POST">
                <div class="form-group">
                    <label for="nev">Név</label>
                    <input type="text" class="form-control" id="nev" name="nev"
                           value="<%= (typeof biralo === 'undefined') ? '' : biralo.nev %>">
                </div>
                <div class="form-group">
                    <label for="email">Email-cim</label>
                    <input type="text" class="form-control" id="email" name="email"
                           value="<%= (typeof biralo === 'undefined') ? '' : biralo.email %>">
                </div>
                <div class="form-group">
                    <label for="neptun">Neptun</label>
                    <input type="text" class="form-control" id="neptun" name="neptun"
                           value="<%= (typeof biralo === 'undefined') ? '' : biralo.neptun %>">
                </div>
                <div class="form-group">
                    <label for="telefon">Telefonszám</label>
                    <input type="text" class="form-control" id="telefon" name="telefon" value="<%= (typeof biralo === 'undefined') ? '' : biralo.telefon %>">
                </div>
                <input type="submit" class="btn btn-primary" value="Mentés"/>
                <a class="btn btn-link" href="/biralok">Mégsem</a>
            </form>
        </div>
        <div class="col-lg-4 col-md-6 col-12">
        </div>
        <div class="col-lg-4 col-md-6 col-12">
        </div>
    </div>
</div>

<%-include('footer') %>
