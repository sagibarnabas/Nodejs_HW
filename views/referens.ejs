<%-include('header') %>
<%-include('menu') %>
<h2>Referens</h2>
<h4>Bírálók:</h4>

<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>
                        Név
                    </th>
                    <th>
                        Neptun
                    </th>
                    <th>
                        Telefonszám
                    </th>
                    <th>
                        Email cím
                    </th>
                    <th>
                        &nbsp
                    </th>
                </tr>
                <% biralok.forEach(function(egybiralo){ %>
                <tr>
                    <td>
                        <%=egybiralo.nev%>
                    </td>
                    <td>
                        <%=egybiralo.neptun%>
                    </td>
                    <td>
                        <%=egybiralo.telszam%>
                    </td>
                    <td>
                        <%=egybiralo.email%>
                    </td>
                    <td>
                        <a href="/biralo/<%=egybiralo._biraloid%>/edit" class="btn btn-sm btn-primary"><i class="fas fa-user-edit"></i></a>
                        <a href="/biralo/<%=egybiralo._biraloid%>/delete" class="btn btn-sm btn-danger"><i class="fas fa-user-minus"></i></a>
                    </td>
                </tr>
                <% }); %>
            </table>
            <a class="btn btn-primary" href="/biralo/new">Új bíráló</a>
        </div>
    </div>
</div>
<%-include('footer') %>
